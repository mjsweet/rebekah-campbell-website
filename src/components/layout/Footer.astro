---
import { SITE, FOOTER_NAV } from '@lib/constants';
import { Linkedin, Twitter, Instagram, Mail } from 'lucide-astro';
---

<footer class="bg-neutral-900 text-white">
  <div class="container py-16">
    <div class="grid gap-8 lg:grid-cols-4">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-4" aria-label="Rebekah Campbell - Home">
          <span class="font-display text-2xl font-medium text-white">Rebekah Campbell</span>
        </a>
        <p class="text-sm text-white/70 mb-6 max-w-xs">
          Entrepreneur, author, and coach helping people find love, build businesses, and raise capital.
        </p>
        <div class="flex gap-4">
          <a
            href={SITE.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-white/70 hover:text-primary-400 transition-colors"
            aria-label="Follow on LinkedIn"
          >
            <Linkedin class="h-5 w-5" aria-hidden="true" />
          </a>
          <a
            href={SITE.social.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-white/70 hover:text-primary-400 transition-colors"
            aria-label="Follow on Twitter"
          >
            <Twitter class="h-5 w-5" aria-hidden="true" />
          </a>
          <a
            href={SITE.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-white/70 hover:text-primary-400 transition-colors"
            aria-label="Follow on Instagram"
          >
            <Instagram class="h-5 w-5" aria-hidden="true" />
          </a>
          <a
            href={`mailto:${SITE.email}`}
            class="p-2 text-white/70 hover:text-primary-400 transition-colors"
            aria-label="Send email"
          >
            <Mail class="h-5 w-5" aria-hidden="true" />
          </a>
        </div>
      </div>

      <!-- Navigation Column -->
      <div>
        <h3 class="font-display text-sm font-semibold uppercase tracking-wider text-white/50 mb-4">
          Explore
        </h3>
        <ul class="space-y-3">
          {FOOTER_NAV.main.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-white/70 hover:text-primary-400 transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Coaching Column -->
      <div>
        <h3 class="font-display text-sm font-semibold uppercase tracking-wider text-white/50 mb-4">
          Coaching
        </h3>
        <ul class="space-y-3">
          {FOOTER_NAV.coaching.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-white/70 hover:text-primary-400 transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div>
        <h3 class="font-display text-sm font-semibold uppercase tracking-wider text-white/50 mb-4">
          Newsletter
        </h3>
        <p class="text-sm text-white/70 mb-4">
          Weekly insights on love, business, and everything in between.
        </p>
        <form class="flex gap-2" action="#" method="POST">
          <label for="footer-email" class="sr-only">Email address</label>
          <input
            type="email"
            id="footer-email"
            name="email"
            placeholder="Enter your email"
            required
            class="flex-1 rounded-md bg-white/10 px-4 py-2 text-sm text-white placeholder-white/50 border border-white/20 focus:border-primary-400 focus:ring-1 focus:ring-primary-400 focus:outline-none"
          />
          <button
            type="submit"
            class="rounded-md bg-primary-500 px-4 py-2 text-sm font-medium text-white hover:bg-primary-600 transition-colors"
          >
            Join
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-white/50">
        &copy; {new Date().getFullYear()} Rebekah Campbell. All rights reserved.
      </p>
      <div class="flex gap-6">
        {FOOTER_NAV.legal.map((item) => (
          <a
            href={item.href}
            class="text-sm text-white/50 hover:text-white/70 transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
