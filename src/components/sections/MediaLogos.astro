---
import Container from '@components/ui/Container.astro';
import { MEDIA_LOGOS } from '@lib/constants';

interface Props {
  title?: string;
}

const { title = 'Featured In' } = Astro.props;
---

<section class="bg-white py-12 border-y border-neutral-900/10">
  <Container>
    <p class="text-center text-sm font-semibold uppercase tracking-wider text-neutral-900/50 mb-8">
      {title}
    </p>
    <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-12">
      {MEDIA_LOGOS.map((logo) => (
        <img
          src={logo.src}
          alt={logo.alt}
          class="h-8 w-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-200"
          loading="lazy"
        />
      ))}
    </div>
  </Container>
</section>
