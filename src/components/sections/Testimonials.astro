---
import Container from '@components/ui/Container.astro';
import SectionHeader from '@components/ui/SectionHeader.astro';
import { Quote } from 'lucide-astro';

interface Testimonial {
  quote: string;
  author: string;
  title?: string;
  image?: string;
}

interface Props {
  eyebrow?: string;
  title?: string;
  description?: string;
  testimonials: Testimonial[];
  variant?: 'grid' | 'carousel' | 'featured';
}

const {
  eyebrow,
  title = 'What Others Say',
  description,
  testimonials,
  variant = 'grid',
} = Astro.props;
---

<section class="bg-neutral-50 py-16 sm:py-20 lg:py-28">
  <Container>
    <SectionHeader
      eyebrow={eyebrow}
      title={title}
      description={description}
    />

    {variant === 'grid' && (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {testimonials.map((testimonial) => (
          <div class="bg-white rounded-xl p-6 shadow-sm border border-neutral-900/10">
            <Quote class="h-8 w-8 text-primary-500/30 mb-4" aria-hidden="true" />
            <blockquote class="text-lg text-neutral-900/80 mb-6">
              "{testimonial.quote}"
            </blockquote>
            <div class="flex items-center gap-4">
              {testimonial.image && (
                <img
                  src={testimonial.image}
                  alt={testimonial.author}
                  class="h-12 w-12 rounded-full object-cover"
                  loading="lazy"
                />
              )}
              <div>
                <p class="font-medium text-neutral-900">{testimonial.author}</p>
                {testimonial.title && (
                  <p class="text-sm text-neutral-900/60">{testimonial.title}</p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    )}

    {variant === 'featured' && testimonials[0] && (
      <div class="max-w-4xl mx-auto text-center">
        <Quote class="h-12 w-12 text-primary-500/30 mx-auto mb-6" aria-hidden="true" />
        <blockquote class="text-2xl text-neutral-900 font-display sm:text-3xl lg:text-4xl mb-8">
          "{testimonials[0].quote}"
        </blockquote>
        <div class="flex items-center justify-center gap-4">
          {testimonials[0].image && (
            <img
              src={testimonials[0].image}
              alt={testimonials[0].author}
              class="h-14 w-14 rounded-full object-cover"
              loading="lazy"
            />
          )}
          <div class="text-left">
            <p class="font-medium text-neutral-900">{testimonials[0].author}</p>
            {testimonials[0].title && (
              <p class="text-sm text-neutral-900/60">{testimonials[0].title}</p>
            )}
          </div>
        </div>
      </div>
    )}
  </Container>
</section>
