---
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';

interface Props {
  title?: string;
  description?: string;
  variant?: 'inline' | 'card';
}

const {
  title = 'Join the Newsletter',
  description = 'Weekly insights on love, business, and everything in between. No fluff, no guru nonsense. Just real lessons from real experience.',
  variant = 'inline',
} = Astro.props;
---

{variant === 'inline' && (
  <section class="bg-primary-500 py-16 sm:py-20">
    <Container>
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="font-display text-3xl font-medium text-white sm:text-4xl">
          {title}
        </h2>
        <p class="mt-4 text-lg text-white/90">
          {description}
        </p>
        <form class="mt-8 flex flex-col sm:flex-row gap-4 max-w-md mx-auto" action="#" method="POST">
          <label for="newsletter-email" class="sr-only">Email address</label>
          <input
            type="email"
            id="newsletter-email"
            name="email"
            placeholder="Enter your email"
            required
            class="flex-1 rounded-md px-4 py-3 text-base text-neutral-900 placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-white"
          />
          <Button type="submit" variant="secondary" size="md">
            Subscribe
          </Button>
        </form>
        <p class="mt-4 text-sm text-white/70">
          Join thousands of readers who value authenticity over hype.
        </p>
      </div>
    </Container>
  </section>
)}

{variant === 'card' && (
  <div class="bg-white rounded-xl p-8 shadow-sm border border-neutral-900/10">
    <h3 class="font-display text-2xl font-medium text-neutral-900 mb-2">
      {title}
    </h3>
    <p class="text-neutral-900/70 mb-6">
      {description}
    </p>
    <form class="flex flex-col gap-4" action="#" method="POST">
      <label for="sidebar-email" class="sr-only">Email address</label>
      <input
        type="email"
        id="sidebar-email"
        name="email"
        placeholder="Enter your email"
        required
        class="w-full rounded-md border border-neutral-900/20 px-4 py-3 text-base text-neutral-900 placeholder-neutral-500 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 focus:outline-none"
      />
      <Button type="submit" variant="primary" size="md">
        Subscribe
      </Button>
    </form>
  </div>
)}
