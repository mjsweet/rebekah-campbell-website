---
interface Props {
  class?: string;
  as?: 'div' | 'section' | 'article' | 'aside' | 'main';
  narrow?: boolean;
}

const { class: className = '', as: Element = 'div', narrow = false } = Astro.props;
const widthClass = narrow ? 'max-w-4xl' : 'max-w-7xl';
---

<Element class:list={['mx-auto px-4 sm:px-6 lg:px-8', widthClass, className]}>
  <slot />
</Element>
