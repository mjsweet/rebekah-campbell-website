---
interface Props {
  type?: 'text' | 'email' | 'tel' | 'url' | 'password' | 'number';
  name: string;
  id?: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  class?: string;
  value?: string;
  error?: string;
}

const {
  type = 'text',
  name,
  id = name,
  label,
  placeholder,
  required = false,
  disabled = false,
  class: className = '',
  value,
  error,
} = Astro.props;
---

<div class={className}>
  <label for={id} class="block text-sm font-medium text-neutral-900 mb-1">
    {label}
    {required && <span class="text-primary-500">*</span>}
  </label>
  <input
    type={type}
    name={name}
    id={id}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    value={value}
    class:list={[
      'block w-full rounded-md border px-4 py-3 text-base text-neutral-900',
      'placeholder:text-neutral-900/50',
      'focus:border-primary-500 focus:ring-1 focus:ring-primary-500 focus:outline-none',
      'disabled:bg-neutral-100 disabled:cursor-not-allowed',
      error ? 'border-red-500' : 'border-neutral-900/20',
    ]}
  />
  {error && (
    <p class="mt-1 text-sm text-red-600">{error}</p>
  )}
</div>
