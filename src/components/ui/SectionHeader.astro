---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
  class?: string;
}

const {
  eyebrow,
  title,
  description,
  align = 'center',
  class: className = '',
} = Astro.props;

const alignClass = align === 'center' ? 'text-center mx-auto' : 'text-left';
---

<div class:list={['max-w-3xl mb-12', alignClass, className]}>
  {eyebrow && (
    <p class="text-sm font-semibold uppercase tracking-wider text-primary-600 mb-2">
      {eyebrow}
    </p>
  )}
  <h2 class="font-display text-3xl font-medium text-neutral-900 sm:text-4xl lg:text-5xl">
    {title}
  </h2>
  {description && (
    <p class="mt-4 text-lg text-neutral-900/70 sm:text-xl">
      {description}
    </p>
  )}
</div>
