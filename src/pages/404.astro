---
import PageLayout from '@layouts/PageLayout.astro';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
---

<PageLayout
  title="Page Not Found | Rebekah Campbell"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <section class="bg-white py-20 sm:py-28 lg:py-36">
    <Container>
      <div class="max-w-2xl mx-auto text-center">
        <p class="text-sm font-semibold uppercase tracking-wider text-primary-600 mb-4">
          404 Error
        </p>
        <h1 class="font-display text-4xl font-medium text-neutral-900 sm:text-5xl lg:text-6xl">
          Page Not Found
        </h1>
        <p class="mt-6 text-lg text-neutral-900/70">
          Sorry, the page you're looking for doesn't exist or has been moved.
        </p>
        <div class="mt-8 flex flex-wrap justify-center gap-4">
          <Button href="/" variant="primary" size="lg">
            Go Home
          </Button>
          <Button href="/contact/" variant="secondary" size="lg">
            Contact Me
          </Button>
        </div>

        <div class="mt-12 pt-12 border-t border-neutral-900/10">
          <p class="text-neutral-900/60 mb-4">Looking for something specific?</p>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <a href="/about/" class="text-primary-600 hover:text-primary-700">About</a>
            <a href="/book/" class="text-primary-600 hover:text-primary-700">Book</a>
            <a href="/coaching/" class="text-primary-600 hover:text-primary-700">Coaching</a>
            <a href="/speaking/" class="text-primary-600 hover:text-primary-700">Speaking</a>
            <a href="/articles/" class="text-primary-600 hover:text-primary-700">Articles</a>
          </div>
        </div>
      </div>
    </Container>
  </section>
</PageLayout>
