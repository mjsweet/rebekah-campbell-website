---
import PageLayout from '@layouts/PageLayout.astro';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
import NewsletterSignup from '@components/sections/NewsletterSignup.astro';
import { Play } from 'lucide-astro';
---

<PageLayout
  title="Videos | Rebekah Campbell"
  description="Watch Rebekah Campbell's talks, interviews, and video content on entrepreneurship, relationships, and personal development."
>
  <!-- Hero Section -->
  <section class="bg-white py-16 sm:py-20">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl font-medium text-neutral-900 sm:text-5xl">
          Videos
        </h1>
        <p class="mt-6 text-lg text-neutral-900/70">
          Talks, interviews, and insights on entrepreneurship, relationships, and building a life of purpose.
        </p>
      </div>
    </Container>
  </section>

  <!-- Featured Videos -->
  <section class="bg-neutral-50 py-16 sm:py-20">
    <Container>
      <h2 class="font-display text-2xl font-medium text-neutral-900 sm:text-3xl text-center mb-12">
        Featured Videos
      </h2>

      <div class="grid gap-8 md:grid-cols-2">
        <!-- TEDx Talk Placeholder -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-neutral-900/10">
          <div class="aspect-video bg-neutral-200 flex items-center justify-center">
            <div class="text-center">
              <Play class="h-12 w-12 text-neutral-400 mx-auto mb-2" aria-hidden="true" />
              <p class="text-neutral-600">TEDx Sydney Talk</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-medium text-neutral-900 mb-2">
              TEDx Sydney
            </h3>
            <p class="text-neutral-900/70 text-sm">
              Rebekah's TEDx talk on entrepreneurship and personal development.
            </p>
          </div>
        </div>

        <!-- Webinar Placeholder -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-neutral-900/10">
          <div class="aspect-video bg-neutral-200 flex items-center justify-center">
            <div class="text-center">
              <Play class="h-12 w-12 text-neutral-400 mx-auto mb-2" aria-hidden="true" />
              <p class="text-neutral-600">City of Sydney Reboot Series</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-medium text-neutral-900 mb-2">
              City of Sydney Reboot Series
            </h3>
            <p class="text-neutral-900/70 text-sm">
              Virtual event series supporting 18,000+ business owners during challenging times.
            </p>
          </div>
        </div>

        <!-- Interview Placeholder -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-neutral-900/10">
          <div class="aspect-video bg-neutral-200 flex items-center justify-center">
            <div class="text-center">
              <Play class="h-12 w-12 text-neutral-400 mx-auto mb-2" aria-hidden="true" />
              <p class="text-neutral-600">Podcast Interview</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-medium text-neutral-900 mb-2">
              Podcast Interviews
            </h3>
            <p class="text-neutral-900/70 text-sm">
              Featured interviews on various podcasts discussing entrepreneurship and relationships.
            </p>
          </div>
        </div>

        <!-- Book Talk Placeholder -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-neutral-900/10">
          <div class="aspect-video bg-neutral-200 flex items-center justify-center">
            <div class="text-center">
              <Play class="h-12 w-12 text-neutral-400 mx-auto mb-2" aria-hidden="true" />
              <p class="text-neutral-600">138 Dates Book Launch</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl font-medium text-neutral-900 mb-2">
              138 Dates Book Events
            </h3>
            <p class="text-neutral-900/70 text-sm">
              Book launch events and discussions about the 138 dates journey.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Newsletter CTA -->
  <NewsletterSignup
    title="Get Notified About New Videos"
    description="Subscribe to be the first to know when new video content is released."
  />
</PageLayout>
